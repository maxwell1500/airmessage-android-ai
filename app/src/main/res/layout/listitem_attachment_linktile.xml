<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="@dimen/queuetilecontainer_size"
	android:background="@drawable/rounded_selectable_contenttile"
	android:backgroundTint="?android:attr/colorButtonNormal"
	android:foreground="@drawable/rounded_selectable_contenttile"
	android:focusable="true"
	android:clickable="true"
	android:layout_marginEnd="@dimen/contenttile_margin">
	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/container"
		android:layout_width="wrap_content"
		android:layout_height="match_parent" />

	<ViewStub
		android:id="@+id/viewstub_selection"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout="@layout/listitem_attachment_tileselection"
		android:layout_alignLeft="@id/container"
		android:layout_alignRight="@id/container" />
</RelativeLayout>